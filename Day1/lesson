from turtle import *
shape("turtle")

#We want to paint a house

#step 1: draw a square
speed(30)

width(7)
color("red")

forward(200)
left(90)

forward(200)
left(90)

forward(200)
left(90)

forward(200)
left(90)
#end of square

#drawing a door

forward(70)
color("black")
begin_fill()
left(90)
forward(100)
right(90)
forward(50)
right(90)
forward(100)
end_fill()

penup()
goto(200, 200)
pendown()

color("red")
begin_fill()
right(150)
forward(200)
left(120)
forward(200)
end_fill()

#drawing a window
penup()
goto(20, 120)
pendown()

color("black")
begin_fill()
left(120)
forward(40)
left(90)
forward(40)
left(90)
forward(40)
left(90)
forward(40)
end_fill()

penup()
goto(140, 120)
pendown()

begin_fill()
left(90)
forward(40)
left(90)
forward(40)
left(90)
forward(40)
left(90)
forward(40)
end_fill()

#drawing a grass

penup()
color("green")
begin_fill()
begin_fill()
goto(-765, -390)
pendown()
left(90)
forward(1525)
left(90)
forward(390)
left(90)
forward(1525)
left(90)
forward(390)
end_fill()
penup()

#drawing a tree
color("brown")
begin_fill()
goto(-200, 0)
pendown()
left(180)
forward(150)
left(90)
forward(30)
left(90)
forward(150)
left(90)
forward(30)
end_fill()
penup()
goto(-200, 150)
pendown()
color("green")
begin_fill()
forward(50)
left(90)
forward(80)
left(90)
forward(130)
left(90)
forward(80)
left(90)
forward(50)
end_fill()
penup()
goto(-400, 0)
pendown()

#drawing tree 2
color("brown")
begin_fill()
left(90)
forward(150)
left(90)
forward(30)
left(90)
forward(150)
left(90)
forward(30)
end_fill()
penup()
goto(-400, 150)
pendown()
color("green")
begin_fill()
forward(50)
left(90)
forward(80)
left(90)
forward(130)
left(90)
forward(80)
left(90)
forward(50)
end_fill()
penup()
goto(400, 0)
pendown()

#drawing tree 3
color("brown")
begin_fill()
left(90)
forward(180)
left(90)
forward(30)
left(90)
forward(180)
left(90)
forward(30)
end_fill()
penup()
goto(400, 180)
pendown()
color("green")
begin_fill()
forward(40)
left(90)
forward(80)
left(90)
forward(110)
left(90)
forward(80)
left(90)
forward(40)
end_fill()
penup()
goto(-70, 300)
pendown()
color("yellow")
begin_fill()
forward(60)
left(90)
forward(60)
left(90)
forward(60)
left(90)
forward(60)
end_fill()
penup()
goto(-550, -100)
pendown()

#drawing a house N2
color("black")
begin_fill()
right(180)
forward(200)
left(90)
forward(200)
left(90)
forward(200)
left(90)
forward(200)
end_fill()
penup()
goto(-550, 100)
pendown()
color("red")
begin_fill()
left(135)
forward(141)
left(90)
forward(141)
end_fill()
penup()
goto(-600, -90)
pendown()
color("white")
begin_fill()
right(135)
forward(80)
left(90)
forward(40)
left(90)
forward(90)
left(90)
forward(40)
end_fill()
penup()
goto(-600, 0)
pendown()
  
  #drawing windows with house N2
forward(30)
















































exitonclick()